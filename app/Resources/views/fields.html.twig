{% extends 'form_div_layout.html.twig' %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        <div class="alert-message error fade in" data-alert="alert">
            <a class="close" href="#">Ã—</a>
            {% for error in errors %}
                <strong>{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}<br/>
            {% endfor %}
        </div>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}


{% block field_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        <div>
            <span class="help-inline">
                {% for error in errors %}
                    {{ error.messageTemplate|trans(error.messageParameters, 'validators') }}<br/>
                {% endfor %}
            </span>
        </div>
    {% endif %}
{% endspaceless %}
{% endblock field_errors %}
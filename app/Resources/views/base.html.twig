<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>
        {% block title %}
            {% if breadcrumbs is defined %}
                {% for breadcrumb in breadcrumbs|reverse %}
                    {% if breadcrumb.name is defined %}
                        {{ breadcrumb.name }}
                    {% else %}
                        {{ breadcrumb }}
                    {% endif %}
                    /
                {% endfor %}
            {% endif %}
        Project name
    {% endblock %}
    </title>

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css">
    <style type="text/css">
        /* Override some defaults */
        html, body {
          background-color: #eee;
        }
        body {
          padding-top: 40px; /* 40px to make the container go all the way to the bottom of the topbar */
        }
        .container > footer p {
          text-align: center; /* center align it with the container */
        }

        /* The white background content wrapper */
        .content {
          background-color: #fff;
          padding: 20px;
          margin: 0 -20px; /* negative indent the amount of the padding to maintain the grid system */
          -webkit-border-radius: 0 0 6px 6px;
             -moz-border-radius: 0 0 6px 6px;
                  border-radius: 0 0 6px 6px;
          -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
             -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
                  box-shadow: 0 1px 2px rgba(0,0,0,.15);
        }

        /* Page header tweaks */
        .page-header {
          background-color: #f5f5f5;
          padding: 20px 20px 10px;
          margin: -20px -20px 20px;
        }

        /* Styles you shouldn't keep as they are for displaying this base example only */
        .content .span10,
        .content .span4 {
          min-height: 500px;
        }

        /* Give a quick and non-cross-browser friendly divider */
        .content .span4 {
          margin-left: 0;
          padding-left: 19px;
          border-left: 1px solid #eee;
        }

        .topbar .btn {
          border: 0;
        }
    </style>
    {% block stylesheets %}{% endblock %}
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
    <script type="text/javascript" src="http://twitter.github.com/bootstrap/1.3.0/bootstrap-modal.js"></script>
    <script type="text/javascript" src="http://twitter.github.com/bootstrap/1.3.0/bootstrap-alerts.js"></script>
    {% block scripts %}{% endblock %}
</head>
<body>
    <div class="topbar">
        <div class="fill">
            <div class="container">
                <a class="brand" href="{{ path('index') }}">Project name</a>
                <ul class="nav">
                    <li class="active"><a href="{{ path('index') }}">Home</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
                <ul class="nav secondary-nav">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('post_index') }}">Posts</a></li>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                        <li><a href="javascript:void(0);">{{ app.user.username }}</a></li>
                        <li><a href="{{ path('logout') }}">Logout</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="content">
            {% if app.request.get('_route') != 'index' %}
                <div class="page-header">
                {% block page_header %}
                    {% if page_title is defined %}
                        <h1>{{ page_title }} {% if page_secondary_title is defined%}<small>{{ page_secondary_title }}</small>{% endif %}</h1>
                    {% endif %}
                {% endblock %}
                </div>

                    {% if breadcrumbs is defined and breadcrumbs %}
                        <ul class="breadcrumb">
                            <li><a href="{{ path('index') }}">Home</a> <span class="divider">/</span></li>
                            {% for breadcrumb in breadcrumbs %}
                                <li>
                                    {% if breadcrumb.path is defined %}
                                        {% if not loop.last and (breadcrumb.role is not defined or is_granted(breadcrumb.role)) %}
                                            <a href="{{ breadcrumb.path }}">{{ breadcrumb.name }}</a><span class="divider">/</span>
                                        {% else %}
                                            {{ breadcrumb.name }}
                                        {% endif %}
                                    {% elseif breadcrumb.name is defined %}
                                        {{ breadcrumb.name }}
                                    {% else %}
                                        {{ breadcrumb }}
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}


                     <!--<li><a href="#">Home</a> <span class="divider">/</span></li>
                         <li><a href="#">Middle page</a> <span class="divider">/</span></li>
                         <li><a href="#">Another one</a> <span class="divider">/</span></li>
                        <li class="active">You are here</li>-->

            {% endif %}

            {% if app.session.hasFlash('warning') %}
                <div class="alert-message warning fade in" data-alert="alert">
                    <a class="close" href="#">×</a>
                    {{ app.session.flash('warning') }}
                </div>
            {% endif %}

            {% if app.session.hasFlash('error') %}
                <div class="alert-message error fade in" data-alert="alert">
                    <a class="close" href="#">×</a>
                    {{ app.session.flash('error') }}
                </div>
            {% endif %}

            {% if app.session.hasFlash('success') %}
                <div class="alert-message success fade in" data-alert="alert">
                    <a class="close" href="#">×</a>
                    {{ app.session.flash('success') }}
                </div>
            {% endif %}

            {% if app.session.hasFlash('info') %}
                <div class="alert-message info fade in" data-alert="alert">
                    <a class="close" href="#">×</a>
                    {{ app.session.flash('info') }}
                </div>
            {% endif %}

            {% block content %}{% endblock %}
        </div>

        <footer>
            <p>&copy; Company 2011</p>
        </footer>

    </div>
</body>
</html>
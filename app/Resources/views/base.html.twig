<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
{% set show_topbar = is_granted('ROLE_ADMIN') %}
{% set padding_top_px = show_topbar ? '40px' : '0px' %}
{% set show_footer = is_granted('ROLE_ADMIN') %}
<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>
        {% block title %}
            {% if breadcrumbs is defined %}
                {% for breadcrumb in breadcrumbs|reverse %}
                    {% if breadcrumb.name is defined %}
                        {{ breadcrumb.name }}
                    {% else %}
                        {{ breadcrumb }}
                    {% endif %}
                    /
                {% endfor %}
            {% endif %}
        Project name
    {% endblock %}
    </title>

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css" />
    <link rel="stylesheet" href="{{ asset('media/colorbox/colorbox.css') }}" />
    <style type="text/css">
        /* Override some defaults */
        html, body {
          background-color: #eee;
        }

        body {
          padding-top: {{ padding_top_px }}/*40px*/; /* 40px to make the container go all the way to the bottom of the topbar */
        }
        .container > footer p {
          text-align: center; /* center align it with the container */
        }

        /* The white background content wrapper */
        .content {
          background-color: #fff;
          padding: 20px;
          margin: 0 -20px; /* negative indent the amount of the padding to maintain the grid system */
          -webkit-border-radius: 0 0 6px 6px;
             -moz-border-radius: 0 0 6px 6px;
                  border-radius: 0 0 6px 6px;
          -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
             -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
                  box-shadow: 0 1px 2px rgba(0,0,0,.15);
        }

        /* Page header tweaks */
        .page-header {
          background-color: #f5f5f5;
          padding: 20px 20px 10px;
          margin: -20px -20px 20px;
        }

        /* Styles you shouldn't keep as they are for displaying this base example only */
        .content .span10,
        .content .span4 {
          min-height: 500px;
        }

        /* Give a quick and non-cross-browser friendly divider */
        .content .span4 {
          margin-left: 0;
          padding-left: 19px;
          border-left: 1px solid #eee;
        }

        .topbar .btn {
          border: 0;
        }
    </style>
    <link rel="stylesheet" href="{{ asset('media/filetree/filetree.css') }}"/>
    {% block stylesheets %}{% endblock %}
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
    <script src="{{ asset('media/filetree/jquery.filetree.js') }}"></script>
    <script src="{{ asset('media/colorbox/jquery.colorbox-min.js') }}"></script>
    <script type="text/javascript" src="http://twitter.github.com/bootstrap/1.3.0/bootstrap-modal.js"></script>
    <script type="text/javascript" src="http://twitter.github.com/bootstrap/1.3.0/bootstrap-alerts.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
    		$("a.colorbox").colorbox({
    		    maxWidth: '90%',
    		    maxHeight: '90%'
    		});
    	});
    </script>
    {% block scripts %}{% endblock %}
</head>
<body>
    {% if show_topbar %}
    <div class="topbar">
        <div class="fill">
            <div class="container">
                <a class="brand" href="{{ path('post_index') }}">Project name</a>
                <ul class="nav">
                    <li><a href="{{ path('post_index') }}">Posts</a></li>
                </ul>
                <ul class="nav secondary-nav">
                    {% if is_granted('ROLE_USER') %}
                        <li><a href="{{ path('fos_user_profile_show') }}">{{ app.user.username }}</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
    {% endif %}

    <div class="container">
        <div class="content">
            {% if app.request.get('_route') != 'index' %}
                <div class="page-header">
                {% block page_header %}
                    {% if page_title is defined %}
                        <h1>{{ page_title }} {% if is_granted('ROLE_ADMIN') %}<small>Administration</small>{% endif %}</h1>
                    {% endif %}
                {% endblock %}
                </div>

                {% if is_granted('ROLE_ADMIN') and breadcrumbs is defined and breadcrumbs|length %}
                    <ul class="breadcrumb">
                        <li><a href="{{ path('post_index') }}">Home</a> <span class="divider">/</span></li>
                        {% for breadcrumb in breadcrumbs %}
                            <li>
                                {% if breadcrumb.path is defined %}
                                    {% if not loop.last and (breadcrumb.role is not defined or is_granted(breadcrumb.role)) %}
                                        <a href="{{ breadcrumb.path }}">{{ breadcrumb.name }}</a><span class="divider">/</span>
                                    {% else %}
                                        {{ breadcrumb.name }}
                                    {% endif %}
                                {% elseif breadcrumb.name is defined %}
                                    {{ breadcrumb.name }}
                                {% else %}
                                    {{ breadcrumb }}
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}

            {% endif %}

            {% if app.session.hasFlash('warning') %}
                <div class="alert-message warning fade in" data-alert="alert">
                    <a class="close" href="#">×</a>
                    {{ app.session.flash('warning') }}
                </div>
            {% endif %}

            {% if app.session.hasFlash('error') %}
                <div class="alert-message error fade in" data-alert="alert">
                    <a class="close" href="#">×</a>
                    {{ app.session.flash('error') }}
                </div>
            {% endif %}

            {% if app.session.hasFlash('success') %}
                <div class="alert-message success fade in" data-alert="alert">
                    <a class="close" href="#">×</a>
                    {{ app.session.flash('success') }}
                </div>
            {% endif %}

            {% if app.session.hasFlash('info') %}
                <div class="alert-message info fade in" data-alert="alert">
                    <a class="close" href="#">×</a>
                    {{ app.session.flash('info') }}
                </div>
            {% endif %}

            {% block content %}{% endblock %}
        </div>

        {% if show_footer %}
        <footer>
            <p>&copy; Company 2011</p>
        </footer>
        {% endif %}

    </div>
</body>
</html>
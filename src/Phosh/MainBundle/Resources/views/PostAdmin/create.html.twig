{% extends 'PhoshMainBundle:PostAdmin:layout.html.twig' %}

{% block content_inner %}

    <form action="{{ path('post_create') }}" method="post">
        <fieldset>
            <div class="clearfix">
                {{ form_label(form.title) }}
                <div class="input">
                    {{ form_widget(form.title, { 'attr' : {'class' : 'span12'} }) }}
                </div>
            </div>

            <div class="clearfix">
                {{ form_label(form.body) }}
                <div class="input">
                    {{ form_widget(form.body, { 'attr' : {'class' : 'span12', 'style' : 'height: 200px;' } }) }}
                </div>
            </div>

            <div class="clearfix">
                {{ form_label(form.expiredAt) }}
                <div class="input">
                    {{ form_widget(form.expiredAt.date, { 'attr' : {'placeholder' : 'YYYY/MM/DD' } }) }}
                    {{ form_widget(form.expiredAt.time, { 'attr' : {'placeholder' : 'HH:MM:SS' } }) }}
                </div>
            </div>

            {{ form_rest(form) }}

            <div class="actions">
                <input type="submit" name="submit" value="Add" class="btn primary"/>
                <input type="reset" name="submit" value="Reset" class="btn"/>
            </div>
        </fieldset>
    </form>


{% endblock %}
{% extends '::base.html.twig' %}

{% set breadcrumbs = [{ 'name': 'Login', 'path': path('login') }] %}

{% block page_header %}<h1>Login <small>Administration</small></h1>{% endblock %}

{% block content %}



    {% if error_message %}
        <div class="alert-message error">
            <p>{{ error_message }}</p>
        </div>
    {% endif %}




    <form action="{{ path('login_check') }}" method="post">
        <fieldset>
            <div class="clearfix">
                <label for="username">Login:</label>
                <div class="input">
                    <input type="text" id="username" name="_username" value="{{ last_username }}" />
                </div>
            </div>

            <div class="clearfix">
                <label for="password">Password:</label>
                <div class="input">
                    <input type="password" id="password" name="_password" />
                </div>
            </div>

            <div class="clearfix">
                <label for="remember_me">Remember me</label>
                <div class="input">
                    <input type="checkbox" id="remember_me" name="_remember_me" checked />
                </div>
            </div>

            <!-- <input type="hidden" name="_target_path" value="/users" />-->

            <div class="actions">
                <input type="submit" name="login" value="Sign In" class="btn large success"/>
            </div>
        </fieldset>
    </form>

{% endblock %}
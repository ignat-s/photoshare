{% extends 'PhoshMainBundle:ProductAdmin:layout.html.twig' %}

{% set breadcrumbs = [{ 'name': 'Products', 'path': path('product_index') }] %}

{% block content_inner %}

    {% if products|length %}
        <table class="zebra-striped">
            <thead>
                <tr>
                    <th style="width: 10px;">ID</th>
                    <th>Title</th>
                </tr>
            </thead>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td><a href="{{ path('product_show', {'id': product.id}) }}">{{ product.title }}</a></td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <p>No products found</p>
    {% endif %}


{% endblock %}